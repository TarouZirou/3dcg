{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"outDir": "./js",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["DOM", "ES2020"],
		"types": ["@webgpu/types"]
	},
	"include": ["src/**/*"]
}
